{% sw_extends '@Storefront/storefront/layout/header/header.html.twig' %}

{% block layout_header_search_toggle %}
  {{ parent() }}
  <div class="col-auto language-header">
    <div class="language-menu">
      {% sw_include '@Storefront/storefront/layout/header/actions/language-widget.html.twig' %}
    </div>
  </div>
{% endblock %}

{% block layout_header_actions_wishlist %}
  <div class="col-auto wishlist-header">
    <div class="header-wishlist">
      <a class="btn header-wishlist-btn header-actions-btn" href="{{ path('frontend.wishlist.page') }}" title="{{ 'header.wishlist'|trans|striptags }}" aria-label="{{ 'header.wishlist'|trans|striptags }}">{% sw_include '@Storefront/storefront/layout/header/actions/wishlist-widget.html.twig' %}</a>
      <div class="header-actions">{{ 'wlcustom.merken'|trans }}</div>
    </div>
  </div>
{% endblock %}

{% block layout_header_actions_cart %}
  <div class="col-auto cart-header">
    <div class="header-cart" data-offcanvas-cart="true">
      <a class="btn header-cart-btn header-actions-btn" href="{{ path('frontend.checkout.cart.page') }}" data-cart-widget="true" title="{{ 'checkout.cartTitle'|trans|striptags }}" aria-label="{{ 'checkout.cartTitle'|trans|striptags }}">{% sw_include '@Storefront/storefront/layout/header/actions/cart-widget.html.twig' %}</a>
      <div class="header-actions">{{ 'checkout.cartHeader'|trans }}</div>
    </div>
  </div>
{% endblock %}

{% block frosh_product_compare_widget_button %}
  <div class="col-auto">
    {% sw_include '@Storefront/storefront/component/compare/compare-float.html.twig' with { buttonClasses: 'compare-menu-btn header-actions-btn', floatingButtonClasses: '', badgeClasses: 'badge-primary' } %}
    <div class="header-actions">Vergleichen</div>
  </div>
{% endblock %}

