{% sw_extends '@Storefront/storefront/utilities/offcanvas.html.twig' %}

{% block utilities_offcanvas_content %}
  <div class="product-detail-description tab-pane-container">
    <div class="h3 product-detail-description-title">{{ 'wlcustom.detail.datenblatt'|trans }}</div>
    <div class="product-detail-description-text tab_eigenschaften" itemprop="technic1">
      {% if page.product.customFields.custom_product_data_sheet_text and page.product.customFields.custom_product_data_sheet %}
        <p class="detail-table-container">
          {% set mediaID = page.product.customFields.custom_product_data_sheet %}
          {% set mediaCollection = searchMedia([mediaID], context.context) %}
          {% set propertyMedia = mediaCollection.get(mediaID).url %}
          <a href="{{ propertyMedia }}" class="btn btn-primary" target="_blank" title="{{ page.product.customFields.custom_product_data_sheet_text }}">{{ page.product.customFields.custom_product_data_sheet_text }}</a>
